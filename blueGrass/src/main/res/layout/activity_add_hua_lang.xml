<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbcg"
    android:orientation="vertical"
    tools:context=".AddHualangLocation">

    <RelativeLayout style="@style/Title_Bar_Style">

        <TextView
            style="@style/Title_Bar_Center_Text_Style"
            android:text="添加画廊" />

        <TextView
            android:id="@+id/comeback"
            style="@style/ComeBack" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/activity_addhualang_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_shape"
                android:hint="请输入单位/画廊名称(必填项)"
                android:padding="5dp"
                android:textColorHint="@color/blue"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/map_hualanglocation_mapview"
                    android:layout_width="fill_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true" />

                <Button
                    android:id="@+id/map_hualanglocation_returnlocation"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="85dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/map_location" />
            </FrameLayout>

            <EditText
                android:id="@+id/activity_addhualang_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入/点击地图获取地址（必填项）"
                android:padding="5dp"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/activity_addhualang_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入联系人"
                android:padding="5dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_addhualang_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入联系电话"
                android:padding="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add_hualang_qujian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="所属区域（必填项）"
                android:padding="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_addhualang_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:editable="false"
                android:hint="===请选择企业类型（必填项）==="
                android:padding="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_addhualang_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:editable="false"
                android:hint="===请选择运营状态（必填项）==="
                android:padding="5dp"
                android:textSize="16sp" />

            <com.reeching.bluegrass.NoScrollGridView
                android:id="@+id/activity_addhualang_share_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="2dp" />

            <EditText
                android:id="@+id/activity_addhualang_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_shape"
                android:hint="备注信息"
                android:maxLines="4"
                android:minLines="4"
                android:padding="5dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_addhualang_legalpeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入法定代表人"
                android:padding="5dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_addhualang_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入面积"
                android:padding="5dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_addhualang_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入风格"
                android:padding="5dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_addhualang_registeraddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入注册地址"
                android:padding="5dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_addhualang_managetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入经营类型"
                android:padding="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_addhualang_livetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_shape"
                android:hint="请输入入住时间"
                android:padding="5dp"

                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="关注等级:(必填项)"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/activity_addhualang_rgp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/activity_addhualang_rb1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/redcircle"
                        android:button="@null"
                        android:gravity="center" />

                    <RadioButton
                        android:id="@+id/activity_addhualang_rb2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/yellowcircle"
                        android:button="@null"
                        android:gravity="center" />

                    <RadioButton
                        android:id="@+id/activity_addhualang_rb3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/greencircle"
                        android:button="@null"
                        android:gravity="center" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/activity_addhualang_btnadd"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_btn"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>