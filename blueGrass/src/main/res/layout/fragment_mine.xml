<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <RelativeLayout style="@style/Title_Bar_Style">

        <TextView
            style="@style/Title_Bar_Center_Text_Style"
            android:text="个人中心" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/title_bar_background">

        <ImageView
            android:id="@+id/fragment_mine_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/iv_circle"
            android:src="@drawable/picom" />

        <TextView
            android:id="@+id/fragment_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_mine_iv"
            android:layout_centerHorizontal="true"
            android:text="@string/no_log_in"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fragment_mine_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_mine_name"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/fragment_mine_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_mine_phonenum"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

