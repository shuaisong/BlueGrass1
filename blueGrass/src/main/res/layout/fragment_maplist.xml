<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <TextView
        android:id="@+id/fragment_maplist_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center"
        android:text="暂无数据！"
        android:visibility="gone" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/fragment_maplist_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.reeching.bluegrass.MyEditText
            android:id="@+id/listFragment_A"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:editable="false"
            android:background="@drawable/edt_shape"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/hide"
            android:hint="A区查看"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp" />

        <View
            android:id="@+id/fragment_list_viewA"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <com.reeching.bluegrass.MyEditText
            android:layout_marginTop="10dp"
            android:id="@+id/listFragment_B"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:editable="false"
            android:gravity="center"
            android:background="@drawable/edt_shape"

            android:drawablePadding="2dp"
            android:drawableRight="@drawable/hide"
            android:hint="B区查看"
            android:maxLines="1"
            android:padding="5dp" />

        <View
            android:id="@+id/fragment_list_viewB"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <com.reeching.bluegrass.MyEditText
            android:layout_marginTop="10dp"
            android:id="@+id/listFragment_C"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:editable="false"
            android:background="@drawable/edt_shape"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/hide"
            android:hint="C区查看"
            android:maxLines="1"
            android:padding="5dp" />

        <View
            android:id="@+id/fragment_list_viewC"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <com.reeching.bluegrass.MyEditText
            android:layout_marginTop="10dp"
            android:id="@+id/listFragment_D"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:editable="false"
            android:background="@drawable/edt_shape"
           android:gravity="center"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/hide"
            android:hint="D区查看"
            android:maxLines="1"
            android:padding="5dp" />

        <View
            android:id="@+id/fragment_list_viewD"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <com.reeching.bluegrass.MyEditText
            android:layout_marginTop="10dp"
            android:id="@+id/listFragment_E"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:editable="false"
            android:background="@drawable/edt_shape"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/hide"
            android:hint="E区查看"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp" />

        <View
            android:id="@+id/fragment_list_viewE"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>

        <com.reeching.bluegrass.MyEditText
            android:layout_marginTop="10dp"
            android:id="@+id/listFragment_F"
            android:focusable="false"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:editable="false"
            android:background="@drawable/edt_shape"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/hide"
            android:hint="F区查看"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp" />

        <View
            android:id="@+id/fragment_list_viewF"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="1dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/fragment_list_ivA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/visible"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/fragment_list_ivB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/visible"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/fragment_list_ivC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/visible"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/fragment_list_ivD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/visible"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/fragment_list_ivE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/visible"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/fragment_list_ivF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/visible"
        android:visibility="gone" />


</FrameLayout>