<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择像素的标准" />

    <RadioGroup
        android:id="@+id/radiogroup_HSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/radiobutton_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标清图片（推荐）"
            android:textColor="@color/textColor" />

        <RadioButton
            android:id="@+id/radiobutton_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高清原图"
            android:textColor="@color/textColor" />
    </RadioGroup>


    <TextView
        android:id="@+id/photo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="请选择图片的类型" />

    <RadioGroup
        android:id="@+id/radiogroup_dismisstrue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/radiobutton_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正常图片"
            android:textColor="@color/textColor" />

        <RadioButton
            android:id="@+id/radiobutton_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题作品"
            android:textColor="@color/textColor" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/radiobutton_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/radiobutton_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="确定"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>