<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/itembcg"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/hualanginfo_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/hualanginfo_tv2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hualanginfo_tv1"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="" />

    <TextView
        android:id="@+id/hualanginfo_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hualanginfo_tv1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_btn"
        android:padding="5dp"
        android:text="画廊信息"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/hualanginfo_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hualanginfo_tv2"
        android:layout_marginTop="15dp"
        android:text="关注等级："
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/hualanginfo_tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hualanginfo_tv3"
        android:layout_marginTop="10dp"
        android:text="创建时间" />

    <TextView
        android:id="@+id/hualanginfo_tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hualanginfo_tv3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/hualanginfo_tv6"
        android:text="12" />

    <TextView
        android:id="@+id/hualanginfo_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hualanginfo_tv4"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circle_btn"
        android:gravity="center"
        android:padding="5dp"
        android:text="历史展览"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/hualanginfo_recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hualanginfo_tv5"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circle_btn"
        android:gravity="center"
        android:padding="5dp"
        android:text="恢复画廊"
        android:visibility="gone"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/hualanginfo_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/hualanginfo_tv3"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/hualanginfo_tv3"
        android:src="@drawable/red" />

</RelativeLayout>