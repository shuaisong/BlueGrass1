<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xiada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.reeching.bluegrass.XiadaActivity">
    <RelativeLayout style="@style/Title_Bar_Style" >

        <TextView
            style="@style/Title_Bar_Center_Text_Style"
            android:text="任务下达" />

        <TextView
            android:id="@+id/comeback"
            android:layout_marginLeft="2dp"
            style="@style/ComeBack" />
    </RelativeLayout>
    <TextView
        android:id="@+id/xiada_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/edt_shape"
        android:editable="false"
        android:hint="===请选择任务类型===(必选项)"
        android:padding="5dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/xiada_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/edt_shape"
        android:editable="false"
        android:hint="===请选择任务接收人===(必选项)"
        android:padding="5dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/xiada_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/edt_shape"
        android:editable="false"
        android:hint="===请选择计划处理时间===(必选项)"
        android:padding="5dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/xiada_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/edt_shape"
        android:editable="false"
        android:hint="===请选择状态===(必选项)"
        android:padding="5dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/xiada_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/edt_shape"
        android:gravity="start"
        android:hint="任务备注(选填项)"
        android:maxLines="4"
        android:minLines="4"
        android:padding="5dp"
        android:textSize="16sp" />
    <Button
        android:id="@+id/xiada_report"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="100dp"
        android:background="@drawable/circle_btn"
        android:gravity="center"
        android:text="下达"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
